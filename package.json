{
  "name": "chatpdfpilot",
  "version": "1.0.0",
  "description": "AI-powered PDF chat application by Alan Joseph Monichan",
  "author": "Alan Joseph Monichan",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=@chatpdfpilot/api",
    "dev:web": "npm run dev --workspace=@chatpdfpilot/web",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=@chatpdfpilot/api",
    "build:web": "npm run build --workspace=@chatpdfpilot/web",
    "start": "npm run start --workspace=@chatpdfpilot/api",
    "start:win": "npm run start:win --workspace=@chatpdfpilot/api",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "multer": "^2.0.2",
    "pdfjs-dist": "^4.8.69"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.4",
    "typescript": "5.6.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
